<Window x:Class="VRCFaceTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VRCFaceTracking"
        mc:Ignorable="d"
        Title="VRCFaceTracking" Height="450" Width="800" Background="#3b3b3b">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <Image x:Name="VRCFTLogo" HorizontalAlignment="Left" Height="120" Margin="20,20,0,0" VerticalAlignment="Top" Width="120" Source="VRCFTLogo.png"/>
        <TextBlock x:Name="WTVRCFT" HorizontalAlignment="Left" Margin="145,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="115" Width="185" Foreground="#FFE8E8E8" FontWeight="Bold" FontSize="20"><Run Text="Welcome to"/><LineBreak/><Run Text="VRCFaceTracking!"/></TextBlock>
        <ListBox x:Name="AvatarInfo" Background="#00000000" Height="283" Margin="330,20,22.6,0" VerticalAlignment="Top" SelectionChanged="AvatarInfoUpdate" Grid.RowSpan="2"/>
        <TextBox x:Name="OSCUpdate" HorizontalAlignment="Left" Foreground="#FFE8E8E8" Height="140" Margin="24,59,0,0" FontSize="15" TextWrapping="Wrap" Text="OSC Update (Latest 5 msgs?)" VerticalAlignment="Top" Width="137" Background="Transparent" Grid.Row="1"/>
        <TextBox x:Name="OSCReceive" HorizontalAlignment="Left" Foreground="#FFE8E8E8" Height="140" Margin="172,59,0,0" FontSize="15" TextWrapping="Wrap" Text="OSC Receive (Latest 5 msgs?)" VerticalAlignment="Top" Width="138" Background="#02FFFFFF" Grid.Row="1"/>
        <Button x:Name="PauseEyesButton" Content="Pause Eye Tracking" HorizontalAlignment="Left" Height="36" Margin="481,126,0,0" VerticalAlignment="Top" Width="140" Click="PauseClick" Grid.Row="1"/>
        <Button x:Name="ReinitializeButton" Content="Reinitialize" HorizontalAlignment="Left" Height="68" Margin="631,131,0,0" VerticalAlignment="Top" Width="140" Click="ReinitializeClick" Grid.Row="1"/>
        <TextBlock x:Name="IPText" HorizontalAlignment="Left" Margin="325,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="32" Foreground="#FFE8E8E8" FontSize="15" Text="IP: " Grid.Row="1"/>
        <TextBlock x:Name="PortText" HorizontalAlignment="Left" Margin="326,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="32" Foreground="#FFE8E8E8" FontSize="15" RenderTransformOrigin="0.481,1.432" Grid.Row="1"><Run Text="Port:"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="IPInput" HorizontalAlignment="Left" Foreground="#FFE8E8E8" Height="26" Margin="362,138,0,0" FontSize="15" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="110" Background="#00000000" TextChanged="IPInputUpdate" Grid.Row="1"/>
        <TextBox x:Name="PortInput" HorizontalAlignment="Left" Foreground="#FFE8E8E8" Height="26" Margin="362,168,0,0" FontSize="15" TextWrapping="Wrap" Text="9000&#xD;&#xA;" VerticalAlignment="Top" Width="110" Background="#00000000" TextChanged="PortInputUpdate" Grid.Row="1"/>
        <TextBlock x:Name="EyeTrackingInfo" HorizontalAlignment="Left" Margin="24,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="286" Foreground="#FFE8E8E8" FontSize="15" Grid.RowSpan="2"><Run Text="Has eye tracking?"/><LineBreak/><Run Text="    Type of eye tracking"/></TextBlock>
        <TextBlock x:Name="MouthTrackingInfo" HorizontalAlignment="Left" Margin="24,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="49" Width="286" Foreground="#FFE8E8E8" FontSize="15" Grid.Row="1"><Run Text="Has mouth tracking?"/><LineBreak/><Run Text="    Type of mouth tracking"/></TextBlock>
        <Button x:Name="PauseMouthButton" Content="Pause Mouth Tracking" HorizontalAlignment="Left" Height="36" Margin="481,168,0,0" VerticalAlignment="Top" Width="140" Click="PauseClickMouth" Grid.Row="1"/>


    </Grid>
</Window>
